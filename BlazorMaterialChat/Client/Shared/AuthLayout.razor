@using BlazorMaterialChat.Client.Pages.Theme
@inherits LayoutComponentBase

<MudSnackbarProvider />
<MudThemeProvider Theme="_currentTheme" />
<MudDialogProvider/>

<MudContainer MaxWidth="MaxWidth.Small" Class="d-flex align-center" Style="height: 100vh;">
    <div class="d-flex flex-column mud-width-full">
        <MudPaper Elevation="25" Class="pa-8" Width="100%" MaxWidth="500px">
            @Body
        </MudPaper>
        <MudAlert Severity="Severity.Info" Class="mt-8 mud-width-full" Style="max-width:500px;" Elevation="25">If you don't want to register, just enter anonymous as username and password</MudAlert>
    </div>
</MudContainer>

@code
{
    private MudTheme _currentTheme = new ChatTheme();
}
