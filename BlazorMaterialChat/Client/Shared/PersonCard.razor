<AuthorizeView>
    <Authorized>
        <MudCard Elevation="0" Square="true" Class="@Class" Style="@Style">
            <MudCardHeader>
                <CardHeaderAvatar>
                    <MudAvatar Image="https://media-exp1.licdn.com/dms/image/C4D03AQGNO7uV7fRi7Q/profile-displayphoto-shrink_200_200/0/1531753989819?e=1614816000&v=beta&t=t2IEQlTyem3aFB1sQXFHrDGt0yMsNkPu7jDmMPoEbLg" />
                </CardHeaderAvatar>
                <CardHeaderContent>
                    <MudText Typo="Typo.body2">@context.User.Identity.Name</MudText>
                    <MudText Typo="Typo.caption">Admin</MudText>
                </CardHeaderContent>
            </MudCardHeader>
        </MudCard>
    </Authorized>
</AuthorizeView>
@code {
    [Parameter] public string Class { get; set; }
    [Parameter] public string Style { get; set; }
}